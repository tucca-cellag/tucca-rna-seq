# workflow/Snakefile

from snakemake.utils import min_version

min_version("8.27.1")


configfile: "config/config.yaml"


# Load environment variables from .env file if it exists
# This allows API keys to be stored securely outside of version control
import os

# Load .env file if it exists
env_file = os.path.join(os.path.dirname(os.path.dirname(__file__)), ".env")
if os.path.exists(env_file):
    with open(env_file, "r") as f:
        for line in f:
            line = line.strip()
            # Skip empty lines and comments
            if not line or line.startswith("#"):
                continue
            # Parse KEY=VALUE format
            if "=" in line:
                key, value = line.split("=", 1)
                key = key.strip()
                value = value.strip().strip('"').strip("'")
                # Set environment variable if not already set
                if key and value and key not in os.environ:
                    os.environ[key] = value

# Override config with environment variables (environment takes precedence)
# This allows API keys to be set via .env file or environment variables
if "NCBI_API_KEY" in os.environ and os.environ["NCBI_API_KEY"]:
    config["api_keys"]["ncbi"] = os.environ["NCBI_API_KEY"]


# This container allows users to fix the underlying OS via singularity for
# each job when using the workflow with --use-conda --use-singularity
container: "docker://continuumio/miniconda3"


##### rules #####


include: "rules/common.smk"
include: "rules/genome_download.smk"
include: "rules/fastqc.smk"
include: "rules/checksum.smk"
include: "rules/multiqc.smk"
include: "rules/qualimap.smk"
include: "rules/salmon.smk"
include: "rules/snapshot_config.smk"
include: "rules/sra_tools.smk"
include: "rules/star_index.smk"
include: "rules/star.smk"
include: "rules/make_linked_txome.smk"
include: "rules/tximeta.smk"
include: "rules/deseq2.smk"
include: "rules/enrichment.smk"


##### target rules #####


rule all:
    input:
        get_final_output(),
        "results/last_run_config_snapshot/snapshot_taken.done",
    message:
        """
        Workflow completed successfully!
        """
